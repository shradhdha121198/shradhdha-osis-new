            {% endif %}
          </div>
        </div>
      </div>
    </form>
  </div>
  <div class="add_cart_option">
    <p>{{ 'cart.get_free' | t }}</p>
  </div>
  <div class="add_to_cart free_ct">
    <div  class="add_cart_btn_free free_add_btn">Add to Cart</div>
  </div>
</div>

{% else %}
<p class="get_free">You get three free product</p>
<div class="free_all_product">
  <div class="flex_form new_add_section">
    <form></form>
    <form action="/cart/add" class="form_post form_free form_first" method="post" id="{{ free_pro_f.id }}">
