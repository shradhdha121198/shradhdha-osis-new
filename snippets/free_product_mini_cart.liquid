{% assign total_money = cart.total_price %}
{% assign free_pro_f = all_products[settings.pro_id_f] %}
{% assign free_pro_t = all_products[settings.pro_id_t] %}
{% assign free_pro_th = all_products[settings.pro_id_th] %}

{% assign first_price = settings.pro_id_f_text | times: 1 %} 
{% assign second_price = settings.pro_id_t_text | times: 1 %} 


{% if total_money <= first_price %}
<p class="get_free">You get one free product</p>
<div class="free_all_product">
   <div class="flex_form">
     <form></form>
     <form action="/cart/add" class="form_post form_free" method="post" id="{{ free_pro_f.id }}">
       <input type="hidden"  name="quantity" min="1" value="1" class="tc item-quantity">
       <input type="hidden" name="id" value="{{ free_pro_f.selected_or_first_available_variant.id }}">
       <div class="free_pro">
         <div class="free_image_flex">
           <div class="free_images">
             {% if free_pro_f != blank %}
             <a href="{{free_pro_f.url}}"><img  loading="lazy" src="{{free_pro_f.featured_image | img_url: "58x"}}" alt="freeproduct 1"></a>
             {% endif %}
           </div>
         </div>
       </div>
     </form>
  </div>
  <div class="add_cart_option">
    <p>{{ 'cart.get_free' | t }}</p>
  </div>
  <div class="add_to_cart free_ct">
    <div  class="add_cart_btn_free free_add_btn">Add to Cart</div>
  </div>
</div>

{% elsif first_price > total_money or total_money <= second_price %}
<p class="get_free">You get two free product</p>
<div class="free_all_product">
