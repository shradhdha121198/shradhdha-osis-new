<style>
  .add_cart_option p{
    color: #bb985f;
    font-weight: bold;
  }
  .flex_form{
    display: flex; 
    /*     justify-content: space-between; */
    max-width: 55%;
  }
  .free_images img{
    width: 100%;
    max-width: 100%;
    padding: 5px;
    object-fit: cover;
  }
  .total_price_cart{
    position: absolute;
    bottom: 6%;
    left: 0;
    right: 0;
  }
  .free_product_mini_cart{
    background-color: #e8d2b0;
    padding: 20px;
    position: fixed;
  }
  .free_add_btn{
    font-size: 20px;
    min-width: 0;
    max-width: 50%;
    color: #fff;
    background: #bb985f;
    border-color: #bb985f;
    border-width: 1px;
    border-style: solid;
    border-radius: 0;
    text-align: center;
    padding: 10px 20px;
    text-decoration: none;
    text-transform: uppercase;
    display: block;
    /*     margin: 0 auto; */
    transition: ease .25s;
    cursor: pointer;
    line-height: 1.4;
    align-items: center;
    justify-content: center;
  }
  .free_add_btn:hover {
    color: #fff;
    background: #000;
  }
  .free_ct{
    margin-left: 20px;
  }
  .free_pro_mini, .get_free{
    text-transform: uppercase;
    font-weight: bold;
    color: red;
  }
</style>
