<section class="instagram-section" data-section="socialize_with_us">
  <div class="container">

    {% if template contains 'index' %}
    {% if section.settings.text != blank %}
    <h2 class="h3 text-center color3">{{ section.settings.text }} <span class="social-icons">
      <a href="{{ section.settings.facebook_link }}" class="social-icon"><img  loading="lazy" src="https://cdn.shopify.com/s/files/1/0427/3936/8087/files/facebook-logo.svg?v=1610968480" alt="Facebook"></a>
      <a href="{{ section.settings.instagram_link }}" class="social-icon"><img  loading="lazy" src="https://cdn.shopify.com/s/files/1/0427/3936/8087/files/instagram-logo.svg?v=1610968505" alt="instagram"></a>
      </span>
    </h2>
    {% endif %}

    <div class="row instagram-gallery">
      {% for block in section.blocks %}
      {% if block.type == 'instagram' %}
      {% if block.settings.image != blank %}
      <div class="insta-item five"><a href="#"> <img  loading="lazy" src="{{ block.settings.image | img_url: "master" }}" alt="Instagram"></a></div>
      {% endif %}
      {% endif %}
      {% endfor %}
    </div>

    <div class="footer-contact">
      {% if section.settings.textarea != blank %}
      <div class="contact-col">
        {{ section.settings.textarea }}
      </div>
      {% endif %}
      {% if section.settings.image != blank %}
      <div class="footer-logo">
        <a href="{{ shop.url }}"><img  loading="lazy" src="{{ section.settings.image | img_url: "master" }}" alt="Oasis"></a>
      </div>
      {% endif %}
      {% if section.settings.textarea1 != blank %}
      <div class="contact-col">
        {{ section.settings.textarea1 }}
      </div>
      {% endif %}
    </div>
    {% else %}
    <div class="footer-contact">
      {% if section.settings.textarea != blank %}
      <div class="contact-col">
        {{ section.settings.textarea }}
      </div>
      {% endif %}
      {% if section.settings.image != blank %}
      <div class="footer-logo">
        <a href="{{ shop.url }}"><img  loading="lazy" src="{{ section.settings.image | img_url: "master" }}" alt="Oasis"></a>
      </div>
      {% endif %}
      {% if section.settings.textarea1 != blank %}
      <div class="contact-col">
        {{ section.settings.textarea1 }}
      </div>
      {% endif %}
    </div>
    {% endif %}
  </div>
</section>
<footer class="site-footer">
  <div class="footer-top">
    <div class="container">
      <div class="footer-top-cover">
        <div class="row">
          {% for link in linklists[section.settings.footer_menu].links %}
          <div class="footer-col {% if forloop.index0 == 1 %}two-col{% endif %}">
            <h5 class="footer-title">{{ link.title }}</h5>
            {% if link.links != blank %}
            <ul class="footer-menu">
              {% for child_link in link.links %}
              <li><a href="{{ child_link.url }}">{{ child_link.title }}</a></li>
              {% endfor %}
            </ul>
            {% endif %}
          </div>
          {% endfor %}
        </div>


        {% include 'newsletter' %}


