        {% endcomment %}



      </div>
    </div>
  </div>

  <!--   write "©" or "&copy;" in footer copyright -->
  <div class="footer-bottom">
    <div class="container">
      <div class="row jc-c">
        {% if section.settings.footer_copyright != blank %}
        <div>© &copy; {{ shop.name }} {{ 'now' | date: "%Y" }} | {{ section.settings.footer_copyright }}</div>
        {% endif %}
      </div>
    </div>
    <div class="payment_icon">
      {% assign enabled_payment_types = 'afterpay,american_express,apple_pay,bitcoin,dankort,diners_club,discover,dogecoin,visa,sofort,shopify_pay,paypal,master,maestro,litecoin,klarna-pay-later,klarna,jcb,ideal,google_pay,forbrugsforeningen,dwolla,amazon_payments,facebook_pay,paytm,payu,elo,clearpay,laybuy' | remove: ' ' | split: ',' %}
      {% for type in enabled_payment_types %}
      <img  loading="lazy" src="{{ type | payment_type_img_url }}" height="24" width="38" alt="" />
      {% endfor %}
    </div>
    <style>
      .payment_icon{
        display: flex;
        justify-content: space-between;
      }
    </style>
  </div>
  
  
  
</footer>
