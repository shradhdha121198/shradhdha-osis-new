  {
    "name": "Build Own Product",
    "settings": [
		{
          "type": "image_picker",
          "id": "image1",
          "label": "Add image"
		},
		{
          "type": "image_picker",
          "id": "image2",
          "label": "Add image"
		}
	],
	"blocks": [
		{
			"type": "product",
			"name": "Add Products",
			"settings": [
				{
					"type": "product",
					"id": "product",
					"label": "Select Product"
				}
			]
		},
		{
			"type": "product1",
			"name": "Add Products second",
			"settings": [
				{
					"type": "product",
					"id": "product1",
					"label": "Select Product"
				}
			]
		},
		{
			"type": "product2",
			"name": "Add Products third",
			"settings": [
				{
					"type": "product",
					"id": "product2",
					"label": "Select Product"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Build Own Product",
			"category": "Build Own Product"
		}
	]
  }
{% endschema %}
